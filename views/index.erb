<h1>SUPER SALON MANAGER</h1>

<form class="" action="/reset_database" method="post">
  <button type="submit"> Reset Database </button>

</form>



<h3>Add a stylist</h3>

<form class="" action="/stylists" method="post">
  <label for="name">Stylist Name:</label>
  <input type="text" name="name" id="name">
  <button type="submit">Add Stylist</button>
</form>

<form class="" action="/clients" method="post">
  <label for="stylist_id">Select a stylist</label>
  <select id="stylist_id" name="stylist_id" type="text">
    <%@stylists.each() do |stylist| %>
      <option value="<%=stylist.id()%>"> <%=stylist.name()%></option>
    <% end %>
  </select>

<label for="name"> Client Name: </label>
<input type="text" name="name" id="name3">

<button type="submit"> Add Client</button>

</form>

<% if @stylists.any?() %>

<p> Click on a stylist to see his/her clients: </p>

<ul>
<% @stylists.each() do |stylist|%>
<li> <a href="/stylists/<%=stylist.id()%>"> <%=stylist.name()%> </a> </li>
<%end%>
</ul>

<% else %>

<p>This Salon has not stylists yet!</p>

<%end%>
